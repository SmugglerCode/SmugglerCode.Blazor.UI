@typeparam T

@foreach (var item in Items)
{
    <div class="tree-view-grid" 
    style="padding-left:@_rightPadding;">

        <!--  ICON  -->
        @if (item.HasChildren)
        {
            <div @onclick="() => ToggleShowChildren(item)" class="@GetTreeViewIcon(item) tree-view-icon"></div>
        }

        <!--  LABEL  -->
        <div class="tree-view-label tree-view-item" @onclick="() => SelectItem(item)">@item.Label</div>

    </div>
    @if (item.HasChildren && item.ShowChildren)
    {
        <IntiTreeViewItem T="T" 
                          Items="item.Children" 
                          Offset="@(Offset + Step)" 
                          Step="Step"
                          SelectionChanged="SelectionChanged"></IntiTreeViewItem>
    }
}
